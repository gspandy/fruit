<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/img_fruit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tv_fruit_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/img_fruit"
        android:gravity="center"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/fBtn_add"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/img_fruit"
        android:layout_alignEnd="@id/img_fruit"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/type_zero"
        android:src="@mipmap/minus" />
</RelativeLayout>