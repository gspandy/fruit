<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/tab_unSelect"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/tab_unSelect"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_shopping_itemSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:button="@drawable/checkbox_style"/>

        <ImageView
            android:id="@+id/iv_shopping_itemImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_shopping_itemFruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_shopping_itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_Red"/>

            <com.jmf.addsubutils.AddSubUtils
                android:id="@+id/shopping_itemAddSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:editable="false"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
